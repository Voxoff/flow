<%=  render "shared/banner" %>
<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <h2 class="devise-forms">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email",class: "devise-box" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password",class: "devise-box" } %>
        <%= f.input :remember_me, as: :boolean, class: "ml-1" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: " btn btn-primary full-submit gradient" %>
      </div>

    <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

</div>

</div>
