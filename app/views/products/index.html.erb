<%=  render "shared/banner" %>
  <%= image_tag "leftline.png", class: "left-line" %>
  <div class="banner-content">
    <h1>Our New Collection</h1>
  </div>
    <%= image_tag "rline.png", class: "right-line" %>
  <%= link_to :anchor => "products" do %>
    <div class="tab">
      FlowCBD
    </div>
  <% end %>
</div>

<% if false %>
  <div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-6 col-md-4">
          <div class="product-card">
            <div class="thumbnail">
              <%= link_to image_tag(product.photo_url), product_path(product) %>
              <div class="caption">
                <h3><%= link_to product.name, product_path(product) %></h3>
                <p>Amount: <%= humanized_money_with_symbol(product.price) %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container" >
    <div class="product-index">
      <div class="product">
        <%= image_tag Product.first.photo_url, width: "500px", height: "500px" %>
      </div>
      <div class="product-right">
        <div class="desc">
          <h2>Chocolate</h2>
          <p>Savour our smooth tasting orange flavour reminiscent of a freshly squeezed glass of OJ. </p>
        </div>
        <div class="form">
          <%= simple_form_for(:cart) do |f| %>
            <%= f.submit "Purchase", class: "btn btn-primary btn-lg" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container" id="products">
  <% @products.each do |product| %>
    <div class="product-index">
      <div class="product">
        <%= image_tag product.photo_url, width: "500px", height: "500px" %>
      </div>
      <div class="product-right">
        <div class="desc">
          <h2><%= product.name %></h2>
          <p><%= product.description %></p>
        </div>
        <div class="product-form">
          <%= simple_form_for(@cart_item, {wrapper: :vertical_col}) do |f| %>
            <%= f.input :quantity, collection: Product.all.collect(&:name), selected: 1, label: false, class: "form-dropdown"%>
            <%= f.input :strength, collection: [100,200,300,400,500], selected: 1, label: false, class: "form-dropdown"%>
            <%= f.input :cart_id, input_html: { value: @cart.id }, as: :hidden %>
            <%= f.submit "Purchase", class: "btn btn-primary btn-lg" %>
          <% end %>
        </div>
      </div>
    </div>  
  <% end %>
</div>

<div class="space"></div>
